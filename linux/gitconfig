# User identity
#
[user]
    email = [snip]
    name = Valentin Roussellet

# Diff tool
#
[diff]
    tool = vscode

[difftool]
    prompt = false

[difftool "bc"]
    trustExitCode = true

[difftool "vscode"]
    cmd = code --wait --diff $LOCAL $REMOTE

# Merge tool
#
[merge]
    tool = vscode

[mergetool]
    prompt = false
    keepBackup = false

[mergetool "bc"]
    trustExitCode = true

[mergetool "vscode"]
    cmd = code --wait --merge $REMOTE $LOCAL $BASE $MERGED

[credential]
    helper = cache --timeout=86400

# Aliases and shortcuts
#
[alias]
    st = status
    stat = status
    co = checkout
    ci = commit
    up = pull --rebase
    lol = log --oneline --graph --decorate
    lola = log --oneline --graph --decorate --branches
    d = diff
    dt = difftool
    weekly = "!me=$(git config --get user.email); git log --author=$me --since=\"8 days ago\" --oneline"
    deadbranches = "!git fetch -p; git branch -vv | grep \": gone]\" | grep -v  \"\\*\" | awk  '{print $1}'"

[push]
    default = simple # push only the current branch if upstream has the same name

[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true

[init]
    defaultBranch = main
